{
  "name": "Aliexpress global switcher",
  "manifest_version": 3,
  "version": "0.1",
  "description": "Automate switch from ru to global version aliexpress.com",
  "permissions": [
    "tabs",
    "storage",
    "cookies"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "https://login.aliexpress.com/*",
    "https://login.aliexpress.ru/*",
    "https://aliexpress.ru/*",
    "https://www.aliexpress.com/*"
  ],
  "background": {
    "service_worker": "./js/background.js"
  }
}